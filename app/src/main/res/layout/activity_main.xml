<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv"
            android:textStyle="bold"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:text="~LOTERIA~"
            android:textAlignment="center"
            android:paddingBottom="10dp"
            android:textSize="45sp"></TextView>

        <Button
            android:id="@+id/btnMusica"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/iconomusica"></Button>
    </LinearLayout>

    <VideoView
        android:paddingTop="20dp"
        android:id="@+id/videoView"
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="500dp"></VideoView>

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="274dp"
        android:layout_height="242dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/start"
        android:text=""
        android:textSize="60sp"></Button>

    <ImageView

        android:layout_gravity="center"
        android:id="@+id/imagen"
        android:layout_width="300dp"
        android:layout_height="300dp"
        tools:srcCompat="@tools:sample/avatars" />



    <Button
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/btnDetener"
        android:text="Pausar / Reanudar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>

    <Button
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/btnMostrar"
        android:text="Cartas Faltantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>

    <TextView
        android:id="@+id/tv2"
        android:textSize="20sp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textStyle="bold"
        android:paddingTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cartas Faltantes:"></TextView>

    <ScrollView
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:paddingTop="20dp"
            android:layout_marginLeft="100dp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:id="@+id/tvFaltantes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""></TextView>
    </ScrollView>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp">



        <ImageView
            android:id="@+id/imagenFaltante1"
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/carta5"/>

        <ImageView
            android:id="@+id/imagenFaltante2"
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/carta5" />

        <ImageView
            android:id="@+id/imagenFaltante3"
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/carta5"/>

        <ImageView
            android:id="@+id/imagenFaltante4"
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/carta5"/>

        <ImageView
            android:id="@+id/imagenFaltante5"
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/carta5"/>
</LinearLayout>
    <Button
        android:background="@drawable/derecha"
        android:id="@+id/btnSig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"></Button>






</LinearLayout>